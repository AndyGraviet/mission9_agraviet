@model Book

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h4 style="float:left">@Model.Title</h4>
        <span class="badge bg-primary" style="float:right">
            <p class="text-white text-justify">Publisher: @Model.Publisher <br/><br /> ISBN: @Model.Isbn</p>
        </span>
    </div>
    <ul style="float:left" class="list-group list-group-flush">
        <li class="list-group-item text-left"> @Model.Author</li>
        <li class="list-group-item text-left">@Model.Classification</li>
        <li class="list-group-item text-left">@Model.Category</li>
        <li class="list-group-item text-left">@Model.PageCount</li>
        <li class="list-group-item text-left">@Model.Price</li>
    </ul>
</div>
<br />
