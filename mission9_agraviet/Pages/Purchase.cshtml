@page
@model mission9_agraviet.Pages.PurchaseModel
@{
}


<div class="container">
    <h2>Your Cart</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Publisher</th>
                <th>Isbn</th>
                <th>Author</th>
                <th>Classification</th>
                <th>Category</th>
                <th>PageCount</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.basket.Items)
            {
                <tr>
                    <td>@i.Book.Title</td>
                    <td>@i.Book.Publisher</td>
                    <td>@i.Book.Isbn</td>
                    <td>@i.Book.Author</td>
                    <td>@i.Book.Classification</td>
                    <td>@i.Book.Category</td>
                    <td>@i.Book.PageCount</td>
                    <td>@i.Book.Price</td>
                    <td>@i.Quantity</td>
                    <td>@((i.Quantity * i.Book.Price).ToString("C"))</td>
                    <td class="text-center">
                        <form method="post" asp-page-handler="Remove">
                            <input type="hidden" name="bookId" value="@i.Book.BookId"/>
                            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr class="success">
                <td colspan="9">Sum: </td>
                <td>@Model.basket.CalculateTotal().ToString("C")</td>
            </tr>
        </tfoot>
    </table>

    <div>
        <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    </div>
</div>
